# babixgo.de .gitignore

# Environment configuration (should be configured per environment)
.env
.env.local
.env.*.local

# Email credentials (NEVER commit these!)
/shared/config/email.local.php
/shared/config/database.local.php
/shared/config/*.local.php

# Sensitive configuration
**/config/local.php
**/config/*.local.php

# SMTP test files (temporary)
**/test-email.php
**/email-test.php
**/verify-smtp-config.php
**/test-smtp-send.php

# Uncomment these if you want to exclude them:
# shared/config/database.php

# Uploaded files (should be backed up separately)
downloads/apk/*
downloads/exe/*
downloads/scripts/*

# Keep directory structure but ignore files
!downloads/apk/.gitkeep
!downloads/exe/.gitkeep
!downloads/scripts/.gitkeep

# Log files
*.log
error_log.txt

# Temporary files
*.tmp
*.temp
*.swp
*.swo
*~

# OS files
.DS_Store
Thumbs.db
desktop.ini

# IDE files
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# PHP cache
*.cache

# Backup files
*.bak
*.backup
*.old

# Session files (if using file-based sessions)
sessions/

# Development files
test.php
debug.php
phpinfo.php
# setup-check.php - Included in repo but should be deleted after setup verification
